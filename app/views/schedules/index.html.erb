<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Name</th>
    <th>time_zone</th>
    <th>Cron</th>
    <th>Timing</th>
    <th>Callback url</th>
    <th>Callback params</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.name %></td>
    <td><%= schedule.time_zone %></td>
    <td><%= schedule.cron %></td>
    <td><%= schedule.timing %></td>
    <td><%= schedule.callback_url %></td>
    <td><%= schedule.callback_params %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

